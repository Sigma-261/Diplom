@model Diplom.Models.News
@{
    Layout = "~/Views/AdminPanel/_Layout.cshtml";
}
<div>
    @using (Html.BeginForm("CreateNews", "AdminPanel", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div>
            Название новости
            <p>@Html.EditorFor(model => model.Name)</p>
        </div>

        <div>
            Текст новости
            <p>@Html.TextAreaFor(model => model.Text, 10, 10, null)</p>
        </div>

        <div>
            Дата новости
            <input class="form-control" asp-for="CreatedDate" asp-format="{0:yyyy-MM-ddTHH:mm}" />
        </div>

        <h3>Выберите файлы для загрузки</h3>
        <input type="file" name="uploads" multiple="" />

        <p><input type="submit" value="Добавить" /></p>
    }
</div>


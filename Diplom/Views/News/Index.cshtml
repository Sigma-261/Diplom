@model IEnumerable<Diplom.Models.News>
<html>
<head>
    <title></title>
    <link href='@Url.Content("~/Content/themes/base/jquery-ui.css")' rel="stylesheet" type="text/css" />
</head>
<body>
    <h2>Список Новостей</h2>
    <table border="1">
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>
                    @Html.ActionLink("Смотреть", "GetNews", "News", new { id = c.Id }) |
                    @Html.ActionLink("Изменить", "UpdateNews", "News", new { id = c.Id }) |
                    @Html.ActionLink("Удалить", "DeleteNews", "News", new { id = c.Id })
                </td>
            </tr>
        }
    </table>
    <p> @Html.ActionLink("Добавить", "CreateNews", "News")</p>
</body>
</html>